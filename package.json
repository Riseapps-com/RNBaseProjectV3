{
    "name": "RNBaseProjectV3",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "android": "react-native run-android",
        "ios": "react-native run-ios",
        "start": "react-native start",
        "test": "jest",
        "lint": "eslint .",
        "postinstall": "npx jetify",
        "build-debug-android": "node ./scripts/build-debug-android.js",
        "build-release-android": "node ./scripts/build-release-android.js",
        "test-e2e-android": "node ./scripts/test-e2e-android.js",
        "test-e2e-ios": "node ./scripts/test-e2e-ios.js"
    },
    "dependencies": {
        "@react-native-community/netinfo": "5.2.0",
        "@types/node": "13.1.4",
        "axios": "0.19.0",
        "detox": "^15.0.0",
        "i18n-js": "3.5.1",
        "react": "16.9.0",
        "react-native": "0.61.5",
        "react-native-device-info": "5.4.0",
        "react-native-fast-image": "7.0.2",
        "react-native-linear-gradient": "2.5.6",
        "react-native-loading-spinner-overlay": "1.0.1",
        "react-native-localize": "1.3.1",
        "react-native-navigation": "4.1.0",
        "react-native-snackbar": "2.0.4",
        "react-native-splash-screen": "3.2.0"
    },
    "devDependencies": {
        "@babel/core": "7.6.2",
        "@babel/runtime": "7.6.2",
        "@storybook/react-native": "5.2.8",
        "@types/i18n-js": "3.0.1",
        "@types/react": "16.9.11",
        "@types/react-native": "0.60.27",
        "babel-jest": "24.9.0",
        "jest": "24.9.0",
        "metro-react-native-babel-preset": "0.56.0",
        "prettier": "1.18.2",
        "reactotron-react-native": "4.0.2",
        "shell-utils": "1.0.10",
        "tslint-config-airbnb": "5.11.2",
        "typescript": "3.7.4"
    },
    "detox": {
        "configurations": {
            "ios.sim.debug": {
                "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/RNBaseProjectV3.app",
                "build": "xcodebuild -workspace ios/RNBaseProjectV3.xcworkspace -scheme RNBaseProjectV3 -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
                "type": "ios.simulator",
                "device": {
                    "type": "iPhone 11 Pro Max"
                }
            },
            "android.em.debug": {
                "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
                "build": "cd android && rm -rf app/build && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
                "type": "android.emulator",
                "device": {
                    "avdName": "Pixel_XL_API_29"
                }
            }
        },
        "test-runner": "jest"
    },
    "jest": {
        "preset": "react-native"
    }
}
