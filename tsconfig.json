{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react-native",
    "noEmit": false,
    "outDir": "outputs",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "traceResolution": false,
    "module": "esnext",
    "lib": [
      "es7",
      "es6",
      "dom",
      "es5"
    ],
    "baseUrl": "./",
    "paths": {
      "network": ["./src/network"],
      "network/*": ["./src/network/*"],
      "components": ["./src/components"],
      "components/*": ["./src/components/*"],
      "screens": ["./src/screens"],
      "screens/*": ["./src/screens/*"],
      "store": ["./src/store"],
      "store/*": ["./src/store/*"],
      "utils": ["./src/utils"],
      "utils/*": ["./src/utils/*"],
      "assets": ["./src/assets"],
      "assets/*": ["./src/assets/*"],
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "android",
    "ios",
    "build",
    "node_modules"
  ]
}
